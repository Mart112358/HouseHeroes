<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HouseHeroes.Mobile.MainPage"
             Title="House Heroes">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" Padding="20" Spacing="10">
            <Label Text="House Heroes" 
                   Style="{StaticResource Headline}"
                   HorizontalOptions="Center" />
            <Label Text="Family Task Management" 
                   Style="{StaticResource SubHeadline}"
                   HorizontalOptions="Center" />
            <Button x:Name="RefreshBtn"
                    Text="Refresh Tasks"
                    Clicked="OnRefreshClicked"
                    HorizontalOptions="Fill" />
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" 
                        x:Name="TasksCollectionView"
                        ItemsSource="{Binding Tasks}"
                        Margin="20,0">
            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="No tasks found" 
                           FontSize="18" 
                           HorizontalOptions="Center" />
                    <Label Text="Pull to refresh or check your connection" 
                           FontSize="14" 
                           TextColor="Gray"
                           HorizontalOptions="Center" />
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15" RowSpacing="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{Binding Title}"
                               FontAttributes="Bold"
                               FontSize="16" />

                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding IsCompleted, StringFormat='✓'}"
                               TextColor="Green"
                               FontSize="18"
                               IsVisible="{Binding IsCompleted}" />

                        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                               Text="{Binding Description}"
                               TextColor="Gray"
                               FontSize="14" />

                        <Label Grid.Row="2" Grid.Column="0"
                               Text="{Binding DueDate, StringFormat='Due: {0:MMM dd, yyyy}'}"
                               TextColor="Orange"
                               FontSize="12"
                               IsVisible="{Binding DueDate, Converter={StaticResource IsNotNullConverter}}" />

                        <BoxView Grid.Row="3" Grid.ColumnSpan="2"
                                 Height="1"
                                 BackgroundColor="LightGray"
                                 Margin="0,16,0,0" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator Grid.Row="0" Grid.RowSpan="2"
                          x:Name="LoadingIndicator"
                          IsVisible="{Binding IsBusy}"
                          IsRunning="{Binding IsBusy}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center" />
    </Grid>

</ContentPage>
